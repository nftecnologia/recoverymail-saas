# Node Environment
NODE_ENV=development

# Server
PORT=4000
API_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3000

# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# Redis - Opcional (para cache, não mais necessário para processamento)
# REDIS_URL="rediss://default:password@host:port"

# Trigger.dev - Para processamento de jobs
TRIGGER_API_KEY=tr_dev_xxxxxxxxxxxxxxxxxx
TRIGGER_API_URL=https://api.trigger.dev

# Email (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxxx
RESEND_DOMAIN=yourdomain.com
RESEND_FROM_EMAIL=recovery@yourdomain.com
RESEND_FROM_NAME=YourCompany

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# n8n (opcional)
N8N_URL=http://localhost:5678
N8N_API_KEY= 