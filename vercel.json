{
  "version": 2,
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/dist/server.js"
    },
    {
      "src": "/webhook/(.*)",
      "dest": "backend/dist/server.js" 
    },
    {
      "src": "/auth/(.*)",
      "dest": "backend/dist/server.js"
    },
    {
      "src": "/health",
      "dest": "backend/dist/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "dashboard/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "backend/dist/server.js": {
      "maxDuration": 300
    }
  }
}
