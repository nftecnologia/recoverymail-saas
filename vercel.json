{
  "version": 2,
  "builds": [
    {
      "src": "dashboard/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend/package.json", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/dist/server.js"
    },
    {
      "src": "/webhook/(.*)",
      "dest": "backend/dist/server.js" 
    },
    {
      "src": "/auth/(.*)",
      "dest": "backend/dist/server.js"
    },
    {
      "src": "/health",
      "dest": "backend/dist/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "dashboard/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "backend/dist/server.js": {
      "maxDuration": 300
    }
  }
}